{
  "name": "eth-payments-substream",
  "version": "1.0.0",
  "type": "module",
  "description": "Real-time Escrow contract analytics using Substreams",
  "dependencies": {
    "@substreams/core": "^0.1.19",
    "@substreams/manifest": "^0.0.9",
    "@connectrpc/connect-node": "1.3.0",
    "@connectrpc/connect": "1.3.0",
    "dotenv": "^16.3.1"
  },
  "scripts": {
    "build": "cargo build --target wasm32-unknown-unknown --release",
    "build:all": "./build.sh",
    "start": "node src/index.js",
    "stream": "node src/index.js",
    "dev": "npm run build && npm run stream",
    "build-package": "substreams pack substream.yaml",
    "validate": "substreams info substream.yaml",
    "test:substream": "substreams run substream.yaml map_escrow_events -e sepolia.eth.streamingfast.io:443",
    "clean": "cargo clean && rm -rf target/",
    "setup": "rustup target add wasm32-unknown-unknown"
  },
  "keywords": ["substreams", "ethereum", "analytics", "real-time", "escrow"],
  "author": "Your Name",
  "license": "MIT"
}
